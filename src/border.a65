 .outfile "border.prg"

         .word $0801
         .org $0801

         .scope
         .word _next, 10                       ; Next line and current line number
         .byte $97, "2,0:", $9e, " 2014", $AA, "65",0      ; POKE 2,0 : SYS 2014+65
_next:   .word 0

         .checkpc 2079
         .advance 2079,$0

loop:	
	and #$0f
	inc
	sta $d021
	inc $08ef
	jmp loop

	.byte "PROP.M65U.NAME=BORDER FLASH",0
	.byte "PROP.M65U.ADDR=2079",0

         .scend
