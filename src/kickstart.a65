		ldx #<msg_tryingsdcard
		ldy #>msg_tryingsdcard
		jsr printmessage

tryreadmbr:
		jsr readmbr
		bcs gotmbr

	; check for keyboard input to jump to utility menu
	jsr scankeyboard
	bcs nokey2
	cmp #$20
	beq utility_menu
