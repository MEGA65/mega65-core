		ldy #>msg_nod81
		jsr printmessage
		ldy #$00
		ldz dos_error_code
		jsr printhex

	; debug
	jsr checkpoint
	.byte 0," couldnt mount/attach MEGA65.D81",0

findrom:
		; Check state of current ROM
		;
