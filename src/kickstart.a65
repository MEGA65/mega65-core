		cmp #$24
		beq phd2
		iny
		iny
		cpy #$50
		bne phd3
		rts

phd2:		txa
		ora #$30
		cmp #$3a
		bcc phd1
		sbc #$39
phd1:		sta (<zptempp2),y
		iny
		iny
