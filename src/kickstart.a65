		; Prepare 32-bit pointer for loading kickup @ $0004000
		;
		; BG: and why load at $4000 again?
		;
		lda #$00
		sta <dos_file_loadaddress+0
		lda #$40
		sta <dos_file_loadaddress+1
		lda #$00
		sta <dos_file_loadaddress+2
		lda #$00
		sta <dos_file_loadaddress+3

		ldx #<txt_KICKUPM65
		ldy #>txt_KICKUPM65
