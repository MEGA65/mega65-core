		bcc loadrom

		; ROM is loaded and ready, so transfer control to it.
		;
		ldx #<msg_romok
		ldy #>msg_romok
		jsr printmessage

		jsr checkpoint
		.byte 0,"JUMPing into ROM-code",0

	; check for keyboard input to jump to utility menu
	jsr scankeyboard
	bcs nokey3
	cmp #$20
	beq utility_menu
nokey3:


		jmp go64

