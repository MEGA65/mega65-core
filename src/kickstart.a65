		sta <dos_file_loadaddress+0
		lda #$E0
		sta <dos_file_loadaddress+1
		lda #$F7
		sta <dos_file_loadaddress+2
		lda #$0F
		sta <dos_file_loadaddress+3

		jsr dos_readfileintomemory
