		;
		lda #$00
		sta $d68b	; f011 emulation, BG: should have an alias

		; Go to root directory on default disk
		;
		ldx dos_default_disk
		jsr dos_cdroot
		bcc sdcarderror

		; set name of file we are looking for
		;
		ldx #<txt_MEGA65D81
		ldy #>txt_MEGA65D81
		jsr dos_setname

		; print debug message
		;
		jsr checkpoint
		.byte 0,"  try-mounting MEGA65.D81",0

