		; Oops, cant read MBR
		; display debug message to screen
		;
		ldx #<msg_retryreadmbr
		ldy #>msg_retryreadmbr
		jsr printmessage

		; put sd card sector buffer back after scanning
		; keyboard
		lda #$81
		tsb $d680

		; display debug message to uart
		;
		jsr checkpoint
		.byte 0,"re-try reading MBR of sdcard",0

		jmp tryreadmbr

