normalboot:

	; check for keyboard input to jump to utility menu
	jsr scankeyboard
	bcs nokey1
	cmp #$20
	beq utility_menu

nokey1:

	jsr dump_disk_count	; debugging to Checkpoint
	jsr dumpcurrentfd	; debugging to Checkpoint

		; Try to read the MBR from the SD card to ensure SD card is happy
